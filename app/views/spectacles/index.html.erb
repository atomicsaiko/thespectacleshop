    <% @spectacles.each do | spectacle| %>
    <div class="alert alert-info" role="alert">
      <li class="list-group-item">
        <%= link_to spectacle.style, spectacle_path(spectacle.id) %>
        <%= number_to_currency(spectacle.price, unit: "â‚¬") %>
        <div class="thumbnail">
          <%= link_to(image_tag(spectacle.image), spectacle_path(spectacle.id)) %>
